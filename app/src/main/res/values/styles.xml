<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedCornerTextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="android:minWidth">400dp</item>
        <item name="android:maxWidth">400dp</item>
    </style>

    <style name="shapeAppearanceCircle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="shapeAppearanceRoundedCorner">
        <item name="cornerSize">22%</item>
    </style>

    <style name="materialTextButtonStyle" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">12dp</item>
        <item name="iconTint">?colorOnBackground</item>
    </style>

    <style name="textAppearanceDateTimeSmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>